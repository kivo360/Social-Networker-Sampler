extends layout

block content
  h1 Upload Video
    hr
    form(method="POST", action="/newVideo", enctype="multipart/form-data")
      label(for="post_comment") Post Comment
      input(type="text", name="post_comment")
      br
      input(type="file", name="file")
      br
      input(type="submit")
  h1 Login Validation
    hr
    form(method="POST", action="/login")
      label(for="phone") Phone Number
      input(type="number", name="phone")
      br
      label(for="password") Password
      input(type="password", name="password")
      br
      input(type="submit")
  h1 Register Validation
    hr
    form(method="POST", action="/register")
      label(for="phone") Phone Number
      input(type="number", name="phone")
      br
      label(for="password") Password
      input(type="password", name="password")
      br
      label(for="confirmPassword") Confirm
      input(type="password", name="confirmPassword")
      br
      br
      label(for="fname") First Name
      input(type="text", name="fname")
      br
      label(for="lname") Last Name
      input(type="text", name="lname")
      input(type="submit")
  h1 Add Comment
    hr
    form(method="POST", action="/addComment")
      label(for="itemId") Item
      input(type="number", name="itemId")
      br
      label(for="comment") Comment
      input(type="text", name="comment")
      input(type="submit")
      br
  h1 Add Friend
    hr
    form(method="POST", action="/addFriend")
      label(for="personId2") Person-2 Hint: 12800256
      input(type="number", name="personId2")
      br
      input(type="submit")

  h1 Add Like
    hr
    form(method="POST", action="/addLike")
      label(for="personId") Person
      input(type="number", name="personId")
      br
      label(for="itemId") Item
      input(type="number", name="itemId")
      br
      input(type="submit")
      hr
  h1 Download Video
    hr
    form(method="POST", action="/downloadVideo")
      label(for="video_id") VideoId
      input(type="text", name="video_id")
      br
      input(type="submit")
      hr
  h1 Add Video
    hr
    form(method="POST", action="/addVideo", enctype="multipart/form-data")
      label(for="video_group") Video Group Id
      br
      input(type="text", name="video_group")
      br
      label(for="file") Upload File
      br
      input(type="file", name="file")
      br
      input(type="submit")
  h1 Get Comments
    hr
    form(method="POST", action="/getComments")
      label(for="itemId") Person-2 Hint: 12810496
      input(type="text", name="itemId")
      br
      input(type="submit")

  h1 Friends
    hr
    form(method="POST", action="/getFriends")
      label(for="personId")
      | Person Hint
      br
      input(type="text", name="personId")
      br
      input(type="submit")
  h1 Video By Post
    hr
    form(method="POST", action="/getVideosByPost")
      label(for="postId")
      | Post Id (Hint: 12809472)
      br
      input(type="number", name="postId")
      br
      input(type="submit")
