extends layout

block content
  h1 Upload File
    hr
    form(method="POST", action="/newVideo", enctype="multipart/form-data")
      label(for="post_comment") Post Comment
      input(type="text", name="post_comment")
      br
      input(type="file", name="file")
      br
      input(type="submit")
  h1 Login Validation
    hr
    form(method="POST", action="/login")
      label(for="phone") Phone Number
      input(type="number", name="phone")
      br
      label(for="password") Password
      input(type="password", name="password")
      br
      input(type="submit")
  h1 Register Validation
    hr
    form(method="POST", action="/register")
      label(for="phone") Phone Number
      input(type="number", name="phone")
      br
      label(for="password") Password
      input(type="password", name="password")
      br
      label(for="confirmPassword") Confirm
      input(type="password", name="confirmPassword")
      br
      br
      label(for="fname") First Name
      input(type="text", name="fname")
      br
      label(for="lname") Last Name
      input(type="text", name="lname")
      input(type="submit")
  h1 Add Comment
    hr
    form(method="POST", action="/addComment")
      label(for="itemId") Item
      input(type="number", name="itemId")
      br
      label(for="comment") Comment
      input(type="text", name="comment")
      input(type="submit")
      br
  h1 Add Friend
    hr
    form(method="POST", action="/addFriend")
      label(for="personId2") Person-2 Hint: 12800256
      input(type="number", name="personId2")
      br
      input(type="submit")

  h1 Add Like
    hr
    form(method="POST", action="/addLike")
      label(for="personId") Person
      input(type="number", name="personId")
      br
      label(for="itemId") Item
      input(type="number", name="itemId")
      br
      input(type="submit")